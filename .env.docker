# Docker Environment Variables
# Copy this file to .env and update the values

# Required: Get from Google AI Studio (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Required: Google OAuth Credentials (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Optional: Change these in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production

# Database (automatically configured for Docker)
MONGODB_URI=mongodb://admin:yellowai2024@mongodb:27017/yellowai?authSource=admin

# URLs (automatically configured for Docker)
CLIENT_URL=http://localhost:80
SERVER_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:80,http://localhost:3000,http://localhost:5173